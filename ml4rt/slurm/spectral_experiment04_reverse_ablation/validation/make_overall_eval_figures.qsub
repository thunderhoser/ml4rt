#!/bin/bash

#SBATCH --job-name="make_overall_eval_figures"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="gpuwf"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=01:00:00
#SBATCH --array=0-5
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=make_overall_eval_figures_%A_%a.out

module load cuda/12.3.1
module load imagemagick/7.1.1-11
conda init
conda activate base

echo `which conda`
echo `which python`
echo `which python3`

# PATH=/usr/local/cuda/bin:$PATH
echo $PATH

CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/spectral_experiment04_reverse_ablation"

USE_RESIDUAL_FLAGS=("0" "1" "0" "1" "0" "1")
LOSS_TYPE_STRINGS=("simple" "simple" "intermediate" "intermediate" "complicated" "complicated")

use_residual_flag=${USE_RESIDUAL_FLAGS[$SLURM_ARRAY_TASK_ID]}
loss_type_string=${LOSS_TYPE_STRINGS[$SLURM_ARRAY_TASK_ID]}

model_dir_name="${TOP_MODEL_DIR_NAME}/use-residual-blocks=${use_residual_flag}_loss-type=${loss_type_string}"
evaluation_dir_name="${model_dir_name}/validation/evaluation"
output_dir_name="${model_dir_name}/validation/nice_figures"

python3 -u "${CODE_DIR_NAME}/make_overall_eval_figure.py" \
--input_evaluation_dir_name="${evaluation_dir_name}" \
--for_shortwave=1 \
--wavelengths_metres 0.000005847953216 0.000003418803419 0.000002758620690 0.000002312138728 0.000002040816327 0.000001769911504 0.000001444043321 0.000001269841270 0.000000956937799 0.000000693240901 0.000000517464424 0.000000387221684 0.000000298507463 0.000000227272727 \
--output_dir_name="${output_dir_name}"
