#!/bin/bash

#SBATCH --job-name="make_by_cloud_eval_figures"
#SBATCH --partition="bigmem"
#SBATCH --account="gsd-hpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=01:00:00
#SBATCH --array=0-5
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=make_by_cloud_eval_figures_%A_%a.out

module load cuda/12.3.1
module load imagemagick/7.1.1-11
conda init
conda activate base

echo `which conda`
echo `which python`
echo `which python3`

# PATH=/usr/local/cuda/bin:$PATH
echo $PATH

CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/spectral_experiment04_reverse_ablation"

USE_RESIDUAL_FLAGS=("0" "1" "0" "1" "0" "1")
LOSS_TYPE_STRINGS=("simple" "simple" "intermediate" "intermediate" "complicated" "complicated")

use_residual_flag=${USE_RESIDUAL_FLAGS[$SLURM_ARRAY_TASK_ID]}
loss_type_string=${LOSS_TYPE_STRINGS[$SLURM_ARRAY_TASK_ID]}

model_dir_name="${TOP_MODEL_DIR_NAME}/use-residual-blocks=${use_residual_flag}_loss-type=${loss_type_string}"
evaluation_dir_name="${model_dir_name}/validation/by_cloud_regime/evaluation"
output_dir_name="${model_dir_name}/validation/nice_figures/by_cloud_regime"

python3 -u "${CODE_DIR_NAME}/make_by_cloud_eval_figure.py" \
--input_evaluation_dir_name="${evaluation_dir_name}" \
--for_shortwave=1 \
--include_fog=0 \
--output_dir_name="${output_dir_name}"
