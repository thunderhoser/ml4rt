--output_dir_name="${TOP_MODEL_DIR_NAME}/multimodel_ensemble_50/testing_perturbed_for_uq/by_perturbation_type/${PERTURBATION_TYPE_STRINGS[$SLURM_ARRAY_TASK_ID]}/james2023_figures"
