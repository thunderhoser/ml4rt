#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=process_rrtm_745heights_training_2020_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
set INPUT_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_project/gfs_data/processed/new_heights"
set OUTPUT_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_project/gfs_data/examples_new/new_heights/training"

set FIRST_DATE_STRINGS=("20200101" "20200126" "20200219")
set LAST_DATE_STRINGS=("20200125" "20200218" "20200313")
set PART_NUMBERS=("01" "02" "03")

set first_date_string=${FIRST_DATE_STRINGS[$SLURM_ARRAY_TASK_ID]}
set last_date_string=${LAST_DATE_STRINGS[$SLURM_ARRAY_TASK_ID]}
set part_number=${PART_NUMBERS[$SLURM_ARRAY_TASK_ID]}
set output_file_name="${OUTPUT_DIR_NAME}/learning_examples_2020_part${part_number}.nc"

python3 -u "${CODE_DIR_NAME}/process_rrtm_files.py" \
--input_rrtm_dir_name="${INPUT_DIR_NAME}" \
--first_date_string="${first_date_string}" \
--last_date_string="${last_date_string}" \
--output_example_file_name="${output_file_name}"
