#!/bin/tcsh

#SBATCH --job-name="plot_errors_by_space_jtech2022"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=02:00:00
#SBATCH --array=1-2
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_errors_by_space_jtech2022_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/2022paper_experiment_sw_plusplus/depth=3_num-conv-layers-per-block=1_num-first-layer-channels=128"

set REGIME_NAMES=("low_sza_high_aod" "high_sza")
set regime_name=${REGIME_NAMES[$SLURM_ARRAY_TASK_ID]}

set model_file_names={${TOP_MODEL_DIR_NAME}/model*.h5}
set model_file_name=${model_file_names[$#model_file_names]}
set model_dir_name=`echo $model_file_name | rev | cut -c 4- | rev`

set prediction_file_name="${model_dir_name}/isotonic_regression/testing/lapse_rate_case_studies/no_random_subsetting/examples_${regime_name}.nc"
set output_dir_name="${model_dir_name}/isotonic_regression/testing/lapse_rate_case_studies/no_random_subsetting/examples_${regime_name}/errors_by_space"

python3 -u "${CODE_DIR_NAME}/plot_errors_by_space_jtech2022.py" \
--input_prediction_file_name="${prediction_file_name}" \
--grid_spacing_deg=5 \
--min_num_examples=1 \
--plot_num_examples=1 \
--output_dir_name="${output_dir_name}"
