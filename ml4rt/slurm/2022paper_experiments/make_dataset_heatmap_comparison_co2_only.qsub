set MAX_VALUES=( "1270"                   "6.3"                    "1.39")
set BIN_COUNTS=( "117"                    "126"                    "139")
set FIRST_PANEL_LETTERS=("a" "c" "e")

python3 -u "${CODE_DIR_NAME}/james2023_make_dataset_heatmap_comparison_figure.py" \
--input_dataset_dir_names "/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_project/gfs_data/shortwave_examples_600days/orig_heights/training" "/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_project/gfs_data/longwave_examples_600days/orig_heights/training" \
--dataset_description_strings "Shortwave_training_data" "Longwave_training_data" \
--field_name="${FIELD_NAMES[$SLURM_ARRAY_TASK_ID]}" \
--min_value_for_field="${MIN_VALUES[$SLURM_ARRAY_TASK_ID]}" \
--max_value_for_field="${MAX_VALUES[$SLURM_ARRAY_TASK_ID]}" \
--num_bins_for_field="${BIN_COUNTS[$SLURM_ARRAY_TASK_ID]}" \
--num_panel_rows=2 \
--first_panel_letter="${FIRST_PANEL_LETTERS[$SLURM_ARRAY_TASK_ID]}" \
--output_dir_name="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/jtech2022_paper/dataset_comparison/${FIELD_NAMES[$SLURM_ARRAY_TASK_ID]}"
