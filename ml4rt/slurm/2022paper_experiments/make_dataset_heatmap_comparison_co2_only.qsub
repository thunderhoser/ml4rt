#!/bin/tcsh

#SBATCH --job-name="make_dataset_heatmap_comparison_trace_gases"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
