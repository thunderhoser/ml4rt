#!/bin/tcsh

#SBATCH --job-name="evaluate_by_site"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --mem=8G
#SBATCH --time=02:00:00
#SBATCH --array=1-4
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=evaluate_by_site_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone_sr/ml4rt"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/experiment06"

set DENSE_LAYER_COUNTS=(3 3 4 2)
set DENSE_LAYER_DROPOUT_RATES=(0 0.1 0 0.1)
set SCALAR_LOSS_FUNCTION_WEIGHTS=(50 2.5 25 50)

set dense_layer_count=${DENSE_LAYER_COUNTS[$SLURM_ARRAY_TASK_ID]}
set dense_layer_dropout_rate=${DENSE_LAYER_DROPOUT_RATES[$SLURM_ARRAY_TASK_ID]}
set scalar_loss_function_weight=${SCALAR_LOSS_FUNCTION_WEIGHTS[$SLURM_ARRAY_TASK_ID]}

set dense_layer_count_string=`printf "%d" $dense_layer_count`
set dense_layer_dropout_string=`printf "%.3f" $dense_layer_dropout_rate`
set scalar_loss_function_weight_string=`printf "%05.1f" $scalar_loss_function_weight`
set top_model_dir_name="${TOP_MODEL_DIR_NAME}/num-dense-layers=${dense_layer_count_string}_dense-dropout=${dense_layer_dropout_string}_scalar-lf-weight=${scalar_loss_function_weight_string}"

set model_file_names={${top_model_dir_name}/model*.h5}
set model_file_name=${model_file_names[$#model_file_names]}
set model_dir_name=`echo $model_file_name | rev | cut -c 4- | rev`

set validation_dir_name="${model_dir_name}/validation"
set prediction_file_names=("${validation_dir_name}/by_site/juelich_germany/predictions.nc" "${validation_dir_name}/by_site/santa_barbara_ca/predictions.nc" "${validation_dir_name}/by_site/bodega_bay_ca/predictions.nc" "${validation_dir_name}/by_site/forks_wa/predictions.nc" "${validation_dir_name}/by_site/owego_ny/predictions.nc" "${validation_dir_name}/by_site/tupper_lake_ny/predictions.nc" "${validation_dir_name}/by_site/belle_mina_al/predictions.nc" "${validation_dir_name}/by_site/ny_alesund_norway_land/predictions.nc" "${validation_dir_name}/by_site/eureka_nu_ocean/predictions.nc" "${validation_dir_name}/by_site/barrow_ak_ocean/predictions.nc" "${validation_dir_name}/by_site/lamont_ok/predictions.nc" "${validation_dir_name}/by_site/azores_arm_site/predictions.nc" "${validation_dir_name}/by_site/villum_greenland_land/predictions.nc" "${validation_dir_name}/by_site/alert_nu_land/predictions.nc" "${validation_dir_name}/by_site/pallas_sodankyla_russia_land/predictions.nc" "${validation_dir_name}/by_site/lindenberg_germany/predictions.nc" "${validation_dir_name}/by_site/yopp_arctic_ocean_site1/predictions.nc" "${validation_dir_name}/by_site/yopp_arctic_ocean_site2/predictions.nc" "${validation_dir_name}/by_site/yopp_arctic_ocean_site3/predictions.nc" "${validation_dir_name}/by_site/sheba/predictions.nc" "${validation_dir_name}/by_site/cherskii_russia_ocean/predictions.nc" "${validation_dir_name}/by_site/tiksi_russia_ocean/predictions.nc" "${validation_dir_name}/by_site/fino3_tower_north_sea/predictions.nc")
set prediction_dir_names=("${validation_dir_name}/by_site/juelich_germany" "${validation_dir_name}/by_site/santa_barbara_ca" "${validation_dir_name}/by_site/bodega_bay_ca" "${validation_dir_name}/by_site/forks_wa" "${validation_dir_name}/by_site/owego_ny" "${validation_dir_name}/by_site/tupper_lake_ny" "${validation_dir_name}/by_site/belle_mina_al" "${validation_dir_name}/by_site/ny_alesund_norway_land" "${validation_dir_name}/by_site/eureka_nu_ocean" "${validation_dir_name}/by_site/barrow_ak_ocean" "${validation_dir_name}/by_site/lamont_ok" "${validation_dir_name}/by_site/azores_arm_site" "${validation_dir_name}/by_site/villum_greenland_land" "${validation_dir_name}/by_site/alert_nu_land" "${validation_dir_name}/by_site/pallas_sodankyla_russia_land" "${validation_dir_name}/by_site/lindenberg_germany" "${validation_dir_name}/by_site/yopp_arctic_ocean_site1" "${validation_dir_name}/by_site/yopp_arctic_ocean_site2" "${validation_dir_name}/by_site/yopp_arctic_ocean_site3" "${validation_dir_name}/by_site/sheba" "${validation_dir_name}/by_site/cherskii_russia_ocean" "${validation_dir_name}/by_site/tiksi_russia_ocean" "${validation_dir_name}/by_site/fino3_tower_north_sea")

set i=1

while ($i <= ${#prediction_file_names})
    python3 -u "${CODE_DIR_NAME}/evaluate_neural_net.py" \
    --input_prediction_file_name="${prediction_file_names[$i]}" \
    --output_dir_name="${prediction_dir_names[$i]}"

    @ i = $i + 1
end
