#!/bin/tcsh

#SBATCH --job-name="plot_eval_by_site_same_plots"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --mem=8G
#SBATCH --time=02:00:00
#SBATCH --array=1-4
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_eval_by_site_same_plots_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/experiment09"

set DENSE_LAYER_COUNTS=(4 4 4 3)
set DENSE_LAYER_DROPOUT_RATES=(0.000 0.000 0.000 0.100)
set L2_WEIGHTS=(0.0000001000 0.0000010000 0.0000100000 0.0001000000)

set dense_layer_count=${DENSE_LAYER_COUNTS[$SLURM_ARRAY_TASK_ID]}
set dense_layer_dropout_rate=${DENSE_LAYER_DROPOUT_RATES[$SLURM_ARRAY_TASK_ID]}
set l2_weight=${L2_WEIGHTS[$SLURM_ARRAY_TASK_ID]}

set dense_layer_count_string=`printf "%d" $dense_layer_count`
set dense_layer_dropout_string=`printf "%.3f" $dense_layer_dropout_rate`
set l2_weight_string=`printf "%.10f" $l2_weight`

set top_model_dir_name="${TOP_MODEL_DIR_NAME}/num-dense-layers=${dense_layer_count_string}_dense-dropout=${dense_layer_dropout_string}_l2-weight=${l2_weight_string}"

set model_file_names={${top_model_dir_name}/model*.h5}
set model_file_name=${model_file_names[$#model_file_names]}
set model_dir_name=`echo $model_file_name | rev | cut -c 4- | rev`

set validation_dir_name="${model_dir_name}/validation"

set conus_eval_file_names=("${validation_dir_name}/by_site/santa_barbara_ca/evaluation.nc" "${validation_dir_name}/by_site/bodega_bay_ca/evaluation.nc" "${validation_dir_name}/by_site/forks_wa/evaluation.nc" "${validation_dir_name}/by_site/owego_ny/evaluation.nc" "${validation_dir_name}/by_site/tupper_lake_ny/evaluation.nc" "${validation_dir_name}/by_site/belle_mina_al/evaluation.nc")
set tropical_eval_file_names=("${validation_dir_name}/by_site/hilo_hi/evaluation.nc" "${validation_dir_name}/by_site/honolulu_hi/evaluation.nc" "${validation_dir_name}/by_site/guantanamo_bay/evaluation.nc" "${validation_dir_name}/by_site/rohlsen_us_virgin_islands/evaluation.nc" "${validation_dir_name}/by_site/san_juan_pr/evaluation.nc")
set high_arctic_eval_file_names=("${validation_dir_name}/by_site/villum_greenland_land/evaluation.nc" "${validation_dir_name}/by_site/eureka_nu_ocean/evaluation.nc" "${validation_dir_name}/by_site/alert_nu_land/evaluation.nc" "${validation_dir_name}/by_site/yopp_arctic_ocean_site1/evaluation.nc" "${validation_dir_name}/by_site/yopp_arctic_ocean_site3/evaluation.nc" "${validation_dir_name}/by_site/sheba/evaluation.nc")
set arctic_eval_file_names=("${validation_dir_name}/by_site/juelich_germany/evaluation.nc" "${validation_dir_name}/by_site/fino3_tower_north_sea/evaluation.nc" "${validation_dir_name}/by_site/pallas_sodankyla_russia_land/evaluation.nc" "${validation_dir_name}/by_site/cherskii_russia_ocean/evaluation.nc" "${validation_dir_name}/by_site/barrow_ak_ocean/evaluation.nc" "${validation_dir_name}/by_site/ny_alesund_norway_land/evaluation.nc")

set conus_eval_dir_name="${validation_dir_name}/by_site/evaluation_conus"
set tropical_eval_dir_name="${validation_dir_name}/by_site/evaluation_tropical"
set high_arctic_eval_dir_name="${validation_dir_name}/by_site/evaluation_high_arctic"
set arctic_eval_dir_name="${validation_dir_name}/by_site/evaluation_misc"

python3 -u "${CODE_DIR_NAME}/plot_evaluation.py" \
--input_eval_file_names "${conus_eval_file_names[1]}" "${conus_eval_file_names[2]}" "${conus_eval_file_names[3]}" "${conus_eval_file_names[4]}" "${conus_eval_file_names[5]}" "${conus_eval_file_names[6]}" \
--line_styles "solid" "solid" "solid" "dashed" "dashed" "dashed" \
--line_colours "27_158_119" "217_95_2" "117_112_179" "27_158_119" "217_95_2" "117_112_179" \
--set_descriptions "Santa_Barbara_CA" "Bodega_Bay_CA" "Forks_WA" "Owego_NY" "Tupper_Lake_NY" "Bella_Mina_AL" \
--confidence_level=0.99 \
--use_log_scale=1 \
--plot_by_height=1 \
--output_dir_name="${conus_eval_dir_name}"

python3 -u "${CODE_DIR_NAME}/plot_evaluation.py" \
--input_eval_file_names "${tropical_eval_file_names[1]}" "${tropical_eval_file_names[2]}" "${tropical_eval_file_names[3]}" "${tropical_eval_file_names[4]}" "${tropical_eval_file_names[5]}" \
--line_styles "solid" "solid" "solid" "dashed" "dashed" \
--line_colours "27_158_119" "217_95_2" "117_112_179" "27_158_119" "217_95_2" \
--set_descriptions "Hilo_HI" "Honolulu_HI" "Guantanamo_Bay" "Rohlsen_USVI" "San_Juan_PR" \
--confidence_level=0.99 \
--use_log_scale=1 \
--plot_by_height=1 \
--output_dir_name="${tropical_eval_dir_name}"

python3 -u "${CODE_DIR_NAME}/plot_evaluation.py" \
--input_eval_file_names "${high_arctic_eval_file_names[1]}" "${high_arctic_eval_file_names[2]}" "${high_arctic_eval_file_names[3]}" "${high_arctic_eval_file_names[4]}" "${high_arctic_eval_file_names[5]}" "${high_arctic_eval_file_names[6]}" \
--line_styles "solid" "solid" "solid" "dashed" "dashed" "dashed" \
--line_colours "27_158_119" "217_95_2" "117_112_179" "27_158_119" "217_95_2" "117_112_179" \
--set_descriptions "Villum_GL" "Eureka_NU" "Alert_NU" "YOPP1" "YOPP3" "SHEBA" \
--confidence_level=0.99 \
--use_log_scale=1 \
--plot_by_height=1 \
--output_dir_name="${high_arctic_eval_dir_name}"

python3 -u "${CODE_DIR_NAME}/plot_evaluation.py" \
--input_eval_file_names "${arctic_eval_file_names[1]}" "${arctic_eval_file_names[2]}" "${arctic_eval_file_names[3]}" "${arctic_eval_file_names[4]}" "${arctic_eval_file_names[5]}" "${arctic_eval_file_names[6]}" \
--line_styles "solid" "solid" "solid" "dashed" "dashed" "dashed" \
--line_colours "27_158_119" "217_95_2" "117_112_179" "27_158_119" "217_95_2" "117_112_179" \
--set_descriptions "Juelich_DE" "FINO3" "Pallas_Sodankyla_FI" "Cherskii_RU" "Barrow_AK" "Ny_Alesund_NO" \
--confidence_level=0.99 \
--use_log_scale=1 \
--plot_by_height=1 \
--output_dir_name="${arctic_eval_dir_name}"
