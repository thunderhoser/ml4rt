#!/bin/tcsh

#SBATCH --job-name="plot_evaluation_not_by_height"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=02:00:00
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_evaluation_not_by_height_%A.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone_sr/ml4rt"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/shortwave_mme_no_crps_experiment01"

set evaluation_dir_name="${TOP_MODEL_DIR_NAME}/multimodel_ensemble_50x1/testing_perturbed_for_uq"
set evaluation_file_names=("${evaluation_dir_name}/by_cloud_regime/no_cloud/evaluation.nc" "${evaluation_dir_name}/by_cloud_regime/single_layer_cloud/evaluation.nc" "${evaluation_dir_name}/by_cloud_regime/multi_layer_cloud/evaluation.nc")
set evaluation_dir_name="${evaluation_dir_name}/by_cloud_regime/evaluation"

python3 -u "${CODE_DIR_NAME}/plot_evaluation.py" \
--input_eval_file_names "${evaluation_file_names[1]}" "${evaluation_file_names[2]}" "${evaluation_file_names[3]}" \
--line_styles "solid" "solid" "solid" \
--line_colours "27_158_119" "217_95_2" "117_112_179" \
--set_descriptions "No_cloud" "Single-layer_cloud" "Multi-layer_cloud" \
--confidence_level=0.99 \
--use_log_scale=1 \
--plot_by_height=0 \
--output_dir_name="${evaluation_dir_name}"
