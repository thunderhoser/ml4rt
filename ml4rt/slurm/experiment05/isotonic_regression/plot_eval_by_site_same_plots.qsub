#!/bin/tcsh

#SBATCH --job-name="plot_eval_by_site_same_plots"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --mem=8G
#SBATCH --time=02:00:00
#SBATCH --array=1-4
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_eval_by_site_same_plots_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone_sr/ml4rt"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/experiment05"

set DENSE_LAYER_COUNTS=(4 5 2 2)
set DENSE_LAYER_DROPOUT_RATES=(0.125 0.125 0.500 0.750)
set SCALAR_LOSS_FUNCTION_WEIGHTS=(2.5 5 25 1)

set dense_layer_count=${DENSE_LAYER_COUNTS[$SLURM_ARRAY_TASK_ID]}
set dense_layer_dropout_rate=${DENSE_LAYER_DROPOUT_RATES[$SLURM_ARRAY_TASK_ID]}
set scalar_loss_function_weight=${SCALAR_LOSS_FUNCTION_WEIGHTS[$SLURM_ARRAY_TASK_ID]}

set dense_layer_count_string=`printf "%d" $dense_layer_count`
set dense_layer_dropout_string=`printf "%.3f" $dense_layer_dropout_rate`
set scalar_loss_function_weight_string=`printf "%05.1f" $scalar_loss_function_weight`
set top_model_dir_name="${TOP_MODEL_DIR_NAME}/num-dense-layers=${dense_layer_count_string}_dense-dropout=${dense_layer_dropout_string}_scalar-lf-weight=${scalar_loss_function_weight_string}"

set model_file_names={${top_model_dir_name}/model*.h5}
set model_file_name=${model_file_names[$#model_file_names]}
set model_dir_name=`echo $model_file_name | rev | cut -c 4- | rev`

set validation_dir_name="${model_dir_name}/isotonic_regression/validation"

set evaluation_file_names=("${validation_dir_name}/by_site/juelich_germany/evaluation.nc" "${validation_dir_name}/by_site/ny_alesund_norway_land/evaluation.nc" "${validation_dir_name}/by_site/eureka_nu_ocean/evaluation.nc" "${validation_dir_name}/by_site/barrow_ak_ocean/evaluation.nc" "${validation_dir_name}/by_site/santa_barbara_ca/evaluation.nc" "${validation_dir_name}/by_site/bodega_bay_ca/evaluation.nc" "${validation_dir_name}/by_site/forks_wa/evaluation.nc" "${validation_dir_name}/by_site/owego_ny/evaluation.nc" "${validation_dir_name}/by_site/tupper_lake_ny/evaluation.nc" "${validation_dir_name}/by_site/belle_mina_al/evaluation.nc" "${validation_dir_name}/by_site/lamont_ok/evaluation.nc")
set conus_evaluation_dir_name="${validation_dir_name}/by_site/evaluation_conus"
set non_conus_evaluation_dir_name="${validation_dir_name}/by_site/evaluation_non-conus"

python3 -u "${CODE_DIR_NAME}/plot_evaluation.py" \
--input_eval_file_names "${evaluation_file_names[1]}" "${evaluation_file_names[2]}" "${evaluation_file_names[3]}" "${evaluation_file_names[4]}" \
--line_styles "solid" "solid" "solid" "solid" \
--line_colours "27_158_119" "217_95_2" "117_112_179" "0_0_0" \
--line_legend_strings "Juelich_DE" "Ny_Alesund_NO" "Eureka_NU" "Barrow_AK" \
--use_log_scale=1 \
--plot_by_height=1 \
--output_dir_name="${non_conus_evaluation_dir_name}"

python3 -u "${CODE_DIR_NAME}/plot_evaluation.py" \
--input_eval_file_names "${evaluation_file_names[5]}" "${evaluation_file_names[6]}" "${evaluation_file_names[7]}" "${evaluation_file_names[8]}" "${evaluation_file_names[9]}" "${evaluation_file_names[10]}" "${evaluation_file_names[11]}" \
--line_styles "solid" "solid" "solid" "dashed" "dashed" "dashed" "solid" \
--line_colours "27_158_119" "217_95_2" "117_112_179" "27_158_119" "217_95_2" "117_112_179" "0_0_0" \
--line_legend_strings "Santa_Barbara_CA" "Bodega_Bay_CA" "Forks_WA" "Owego_NY" "Tupper_Lake_NY" "Bella_Mina_AL" "Lamont_OK" \
--use_log_scale=1 \
--plot_by_height=1 \
--output_dir_name="${conus_evaluation_dir_name}"
