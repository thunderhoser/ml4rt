##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=merge_prediction_files_%A.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/shortwave_mme_no_crps_experiment02"

set PATHLESS_INPUT_FILE_NAMES=("predictions_part01.nc" "predictions_part02.nc" "predictions_part03.nc" "predictions_part04.nc" "predictions_part05.nc" "predictions_part06.nc" "predictions_part07.nc" "predictions_part08.nc" "predictions_part09.nc")

set input_file_names_string=""
set i=1

while ($i <= ${#PATHLESS_INPUT_FILE_NAMES})
    set input_file_names_string="${input_file_names_string} ${TOP_MODEL_DIR_NAME}/multimodel_ensemble_50x1/testing_perturbed_for_uq/${PATHLESS_INPUT_FILE_NAMES[$i]}"
    
    @ i = $i + 1
end

python3 -u "${CODE_DIR_NAME}/merge_prediction_files_over_examples.py" \
--input_file_names ${input_file_names_string} \
--take_ensemble_mean=1 \
--output_file_name="${TOP_MODEL_DIR_NAME}/multimodel_ensemble_50x1/testing_perturbed_for_uq/predictions.nc"
