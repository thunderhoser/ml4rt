#!/bin/tcsh

#SBATCH --job-name="merge_spread_skill_results"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --time=30:00:00
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=merge_spread_skill_results_%A.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/shortwave_mme_no_crps_experiment02"

set PATHLESS_INPUT_FILE_NAMES=("spread_vs_skill_part01.nc" "spread_vs_skill_part02.nc" "spread_vs_skill_part03.nc" "spread_vs_skill_part04.nc" "spread_vs_skill_part05.nc" "spread_vs_skill_part06.nc" "spread_vs_skill_part07.nc" "spread_vs_skill_part08.nc" "spread_vs_skill_part09.nc")

set input_file_names_string=""
set i=1

while ($i <= ${#PATHLESS_INPUT_FILE_NAMES})
    set input_file_names_string="${input_file_names_string} ${TOP_MODEL_DIR_NAME}/multimodel_ensemble_50x1/isotonic_regression/testing_perturbed_for_uq/${PATHLESS_INPUT_FILE_NAMES[$i]}"
    
    @ i = $i + 1
end

set output_file_name="${TOP_MODEL_DIR_NAME}/multimodel_ensemble_50x1/isotonic_regression/testing_perturbed_for_uq/spread_vs_skill.nc"

python3 -u "${CODE_DIR_NAME}/merge_spread_skill_results_over_examples.py" \
--input_file_names ${input_file_names_string} \
--output_file_name="${output_file_name}"
