#!/bin/tcsh

#SBATCH --job-name="make_overall_uq_eval_figures"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --time=30:00:00
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=make_overall_uq_eval_figures_%A.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/shortwave_mme_no_crps_experiment02"

set REGIME_STRINGS=("no_cloud" "single_layer_cloud" "multi_layer_cloud")
set i=1

while ($i <= ${#REGIME_STRINGS})
    python3 -u "${CODE_DIR_NAME}/make_overall_uq_eval_figures.py" \
    --input_evaluation_dir_name="${TOP_MODEL_DIR_NAME}/multimodel_ensemble_50x1/isotonic_regression/uncertainty_calibration/testing_perturbed_for_uq/by_cloud_regime/${REGIME_STRINGS[$i]}" \
    --for_shortwave=1 \
    --output_dir_name="${TOP_MODEL_DIR_NAME}/multimodel_ensemble_50x1/isotonic_regression/uncertainty_calibration/testing_perturbed_for_uq/by_cloud_regime/${REGIME_STRINGS[$i]}/nice_figures"
    
    @ i = $i + 1
end
