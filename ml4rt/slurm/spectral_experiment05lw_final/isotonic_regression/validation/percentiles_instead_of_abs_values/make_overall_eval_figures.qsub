#!/bin/bash

#SBATCH --job-name="make_overall_eval_figures"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="gpuwf"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=01:00:00
#SBATCH --array=0-1
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=make_overall_eval_figures_%A_%a.out

module load cuda/12.3.1
module load imagemagick/7.1.1-11
conda init
conda activate base

echo `which conda`
echo `which python`
echo `which python3`

# PATH=/usr/local/cuda/bin:$PATH
echo $PATH

CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/spectral_experiment05lw_final"

MIN_DUAL_WEIGHTS=("0.75" "0.75")
BROADBAND_WEIGHTS=("0.01" "0.01")
ARCHITECTURE_TYPE_STRINGS=("plusplus" "plusplusplus")

min_dual_weight=${MIN_DUAL_WEIGHTS[$SLURM_ARRAY_TASK_ID]}
broadband_weight=${BROADBAND_WEIGHTS[$SLURM_ARRAY_TASK_ID]}
architecture_type_string=${ARCHITECTURE_TYPE_STRINGS[$SLURM_ARRAY_TASK_ID]}

model_dir_name="${TOP_MODEL_DIR_NAME}/min-dual-weight=${min_dual_weight}_broadband-weight=${broadband_weight}_architecture-type=${architecture_type_string}"
evaluation_dir_name="${model_dir_name}/isotonic_regression/validation/percentiles_instead_of_abs_values/evaluation"
output_dir_name="${model_dir_name}/isotonic_regression/validation/percentiles_instead_of_abs_values/nice_figures"

python3 -u "${CODE_DIR_NAME}/make_overall_eval_figure.py" \
--input_evaluation_dir_name="${evaluation_dir_name}" \
--for_shortwave=0 \
--wavelengths_metres 0.000055555555556 0.000023529411765 0.000017699115044 0.000015037593985 0.000013157894737 0.000011111111111 0.000009708737864 0.000008849557522 0.000007782101167 0.000006968641115 0.000006097560976 0.000005154639175 0.000004618937644 0.000004319654428 0.000004016064257 0.000003418803419 1000 \
--output_dir_name="${output_dir_name}"
