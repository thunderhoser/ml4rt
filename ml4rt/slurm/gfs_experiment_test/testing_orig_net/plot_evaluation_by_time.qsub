#!/bin/tcsh

#SBATCH --job-name="plot_evaluation_by_time"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=02:00:00
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_evaluation_by_time_%A.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
set MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/gfs/test"

set evaluation_dir_name="${MODEL_DIR_NAME}/testing/by_time"

python3 -u "${CODE_DIR_NAME}/plot_evaluation_by_time.py" \
--input_evaluation_dir_name="${evaluation_dir_name}" \
--num_zenith_angle_bins=9 \
--num_albedo_bins=20 \
--confidence_level=0.99 \
--output_dir_name="${evaluation_dir_name}/evaluation"
