#!/bin/tcsh

#SBATCH --job-name="evaluate_by_zenith_angle"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --time=02:00:00
#SBATCH --array=1-9
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=evaluate_by_zenith_angle_%A.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_standalone/ml4rt"
set MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4rt_models/gfs/test/trained_with_norm_files"

set ANGLE_BIN_STRINGS=("000" "001" "002" "003" "004" "005" "006" "007" "008")
set angle_bin_string=${ANGLE_BIN_STRINGS[$SLURM_ARRAY_TASK_ID]}

set prediction_dir_name="${MODEL_DIR_NAME}/testing/by_time"

python3 -u "${CODE_DIR_NAME}/evaluate_neural_net.py" \
--input_prediction_file_name="${prediction_dir_name}/predictions_zenith-angle-bin=${angle_bin_string}.nc" \
--num_bootstrap_reps=1 \
--output_dir_name="${prediction_dir_name}"
